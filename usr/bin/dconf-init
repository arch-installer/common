#!/usr/bin/env bash
# dconf-init | Load DE specific dconf settings for the 1st time

# User autostart file
file="$HOME/.config/autostart/dconf-init.desktop"

# Load config
[ -f $file ] && dconf load / < /etc/dconf/de.ini || exit 1

# Stop loading again
rm -f $HOME/.config/autostart/dconf-init.desktop
